{
  "compilerOptions": {
    "sourceMap": true,
    "target": "es2015", // TSはECMAScript 5に変換
    // "module": "ES2015", // TSのモジュールはES Modulesとして出力
    "module": "esnext", 
    "moduleResolution": "node",
    "baseUrl": "./src",
    "typeRoots" : ["./src/@types"],
    "allowSyntheticDefaultImports": true,
    // Required for importing 3rd-party dependencies like EventEmitter3
    "esModuleInterop": true
  },
  
}